{
  "port": 7200,
  "interface": "0.0.0.0",
  "name": "vigile",
  "schema": {
    "sites": "sites",
    "promises": "promises2",
    "accesses": "accesses",
    "subjects": "subjects"
  },
  "mongodb": "mongodb://localhost/ivl",

  "watch": [
      "bin/vigile.js",
      "lib/*.js",
      "routes/*.js"
  ],
  "verbose": true,
  "exitcrash": false,
  "env": {
        "DEBUG": "vigile,route:*,lib:*,-lib:dispatchPromise,-lib:mongo:read"
  },
  "ext": "js"
}
